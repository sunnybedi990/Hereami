<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#bebebe"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vedant.hereami.phonenumber">

    <TextView
        android:text="Enter your Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/textView3"
        android:textSize="28dp"
        android:layout_alignParentEnd="true" />


    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"

        android:layout_marginTop="41dp"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/editTextGetFullNumber"
        android:layout_alignStart="@+id/editTextGetFullNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextGetFullNumber"
        android:layout_marginTop="89dp"

        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/ccp"
        android:layout_marginStart="11dp" />

    <com.vedant.hereami.code.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:defaultNameCode="IN"
        app:keyboardAutoPopOnSearch="false"

        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/editTextGetFullNumber"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/editTextGetFullNumber"
        android:layout_marginStart="11dp"
        android:layout_marginTop="106dp"
        android:id="@+id/textView4" />


</RelativeLayout>
