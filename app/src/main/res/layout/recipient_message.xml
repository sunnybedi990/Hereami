<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recipientMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hi. How are you?"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#727272"
        android:textSize="14sp"
        android:background="@drawable/recipient_rounded_corners" />

    <TextView
        android:id="@+id/recipientMessagetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12:50"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="#727272"
        android:textSize="8sp"
        android:background="@drawable/recipient_rounded_corners"
        android:layout_alignTop="@+id/recipientMessage"
        android:layout_alignLeft="@+id/recipientMessage"
        android:layout_alignStart="@+id/recipientMessage"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/recipientMessage"
        android:layout_alignEnd="@+id/recipientMessage" />


</RelativeLayout>