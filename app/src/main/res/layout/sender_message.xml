<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/senderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sender_rounded_corners"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="I am doing ok" />

    <TextView
        android:id="@+id/senderMessagetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/senderMessage"
        android:layout_alignLeft="@+id/senderMessage"
        android:layout_alignRight="@+id/senderMessage"
        android:layout_alignStart="@+id/senderMessage"
        android:layout_below="@+id/senderMessage"
        android:background="@drawable/sender_rounded_corners"
        android:padding="8dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:textStyle="bold"
        tools:text="12:50" />


</RelativeLayout>